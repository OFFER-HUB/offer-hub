{
  "name": "offer-hub-orchestrator",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:api": "npm run dev -w @offerhub/api",
    "dev:worker": "npm run dev -w @offerhub/worker",
    "build": "npm run build -ws",
    "lint": "echo \"No lint configured\"",
    "prisma:generate": "npx prisma generate --schema packages/database/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema packages/database/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "concurrently": "^9.2.1",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}