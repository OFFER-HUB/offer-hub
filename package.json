{
  "name": "offer-hub-orchestrator",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @offerhub/api",
    "dev:api": "npm run dev -w @offerhub/api",
    "build": "npm run build -w @offerhub/shared -w @offerhub/database && npm run build -ws",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo \"No lint configured\"",
    "prisma:generate": "npx prisma generate --schema packages/database/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema packages/database/prisma/schema.prisma"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.30",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.2",
    "typescript": "^5.9.3"
  }
}